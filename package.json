{
  "name": "tagger",
  "version": "0.0.1",
  "description": "A practical issue tagging program",
  "main": "dist/index.js",
  "scripts": {
    "test": "npm run build:test && node __test__/dist/index.js",
    "build": "ncc build src/main.ts",
    "build:test": "ncc build __test__/main.test.ts -o __test__/dist/",
    "format:w": "prettier --write src __test__",
    "format:r": "prettier --check src __test__"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coolplaylin/tagger.git"
  },
  "keywords": [
    "tag",
    "label"
  ],
  "author": "CoolPlayLin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/coolplaylin/tagger/issues"
  },
  "homepage": "https://github.com/coolplaylin/tagger#readme",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "@octokit/rest": "^19.0.11",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^20.2.3",
    "@vercel/ncc": "^0.36.1",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4"
  }
}
